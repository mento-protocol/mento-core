{
  "extends": "solhint:recommended",
  "plugins": [
    "prettier"
  ],
  "rules": {
    "code-complexity": [
      "error",
      8
    ],
    "compiler-version": [
      "error",
      ">=0.5.13"
    ],
    "func-visibility": [
      "error",
      {
        "ignoreConstructors": true
      }
    ],
    "max-line-length": [
      "error",
      120
    ],
    "not-rely-on-time": "off",
    "function-max-lines": [
      "error",
      200
    ],
    "no-empty-blocks": "off",
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "reason-string": [
      "warn",
      {
        "maxLength": 64
      }
    ]
  }
}